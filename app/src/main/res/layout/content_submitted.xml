<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gan.post.module.SubmittedActivity"
    tools:showIn="@layout/activity_submitted">

    <ImageView
        android:id="@+id/submit_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_success"/>

    <TextView
        android:id="@+id/submitted_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#26A65B"
        android:textSize="24dp"
        android:text="Submit success"
        android:gravity="center_horizontal"
        android:layout_below="@+id/submit_success"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="your application has been submitted,please wait."
        android:gravity="center_horizontal"
        android:layout_below="@+id/submitted_text"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/home_page"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Home Page"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#06495A"
        android:textColor="@android:color/white"
        android:layout_marginBottom="5dp"
        />
</RelativeLayout>
